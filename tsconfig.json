{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2022",
    "outDir": "dist/test",
    "rootDir": "src/test",
    "lib": ["ES2022"],
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "vscode", "mocha"]
  },
  "include": ["src/test/**/*.ts"],
  "exclude": ["node_modules", "dist", ".vscode-test"]
}
